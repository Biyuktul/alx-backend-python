pipeline {
    agent { dockerfile true }
  // agent { 
  //   docker { 
  //     image 'python:alpine3.7'
  //     args '-p 5000:5000'
  //       } 
  // }
    stages {
        stage('checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Biyuktul/alx-backend-python.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                dir('messaging_app') {
                    sh '''
                        python3 -m venv venv
                        . venv/bin/activate
                        pip install --upgrade pip
                        pip install -r requirements.txt
                    '''
                }
            }
        }
        stage('Build') {
            steps {
                sh '''
                    . venv/bin/activate
                    python3 manage.py migrate
                '''
            }
        }
        stage('Test') {
            steps {
                sh '''
                    . venv/bin/activate
                    pytest --junitxml=report.xml
                '''
            }
            post {
                always {
                    junit 'report.xml'
                }
            }
        }
    }
}
