pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Biyuktul/alx-backend-python.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                dir('messaging_app') {
                    sh '''
                        python3 -m venv venv
                        . venv/bin/activate
                        pip install --upgrade pip
                        pip install -r requirements.txt
                    '''
                }
            }
        }
        stage('Build') {
            steps {
                dir('messaging_app') {
                    sh '''
                        . venv/bin/activate
                        python3 manage.py migrate
                    '''
                }
            }
        }
        stage('Test') {
            steps {
                dir('messaging_app') {
                    sh '''
                        . venv/bin/activate
                        pytest --junitxml=report.xml
                    '''
                }
            }
            post {
                always {
                    junit 'messaging_app/report.xml'
                }
            }
        }
    }
}
