pipeline {
    agent { dockerfile true }
  // agent { 
  //   docker { 
  //     image 'python:alpine3.7'
  //     args '-p 5000:5000'
  //       } 
  // }
    stages {
        stage('checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Biyuktul/alx-backend-python.git'
            }
        }
        stage('Python Version') {
            steps {
                sh '''
                    python3 --vesion
                '''
            }
        }
        stage('Build') {
            steps {
                sh '''
                    . venv/bin/activate
                    python manage.py migrate
                '''
            }
        }
        stage('Test') {
            steps {
                sh '''
                    . venv/bin/activate
                    pytest --junitxml=report.xml
                '''
            }
            post {
                always {
                    junit 'report.xml'
                }
            }
        }
    }
}
