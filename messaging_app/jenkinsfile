pipeline {
    agent any
    stages {
        stage('checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Biyuktul/alx-backend-python.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                dir('messaging_app') {
                    sh '''
                        source venv/bin/activate
                        . venv/bin/activate
                        pip install --upgrade pip
                        pip install -r requirements.txt
                    '''
                }
            }
        }
        stage('Build') {
            steps {
                sh '''
                    source venv/bin/activate
                    python3 manage.py migrate
                '''
            }
        }
        stage('Test') {
            steps {
                sh '''
                    source venv/bin/activate
                    pytest --junitxml=report.xml
                '''
            }
            post {
                always {
                    junit 'report.xml'
                }
            }
        }
    }
}
